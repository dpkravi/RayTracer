# box with light at top

fov 60

# black background

background 0 0 0

# light sources 

point_light  0 .98 -2.5  .5 .5 .5

# box

diffuse  .8 .8 .8  .2 .2 .2

push
translate 0 0 -2.5
read cube.cli
pop

# reflective sphere (perfect mirror)

reflective  0 0 0  0 0 0  0.95

sphere 0.3  -0.5 -0.7 -2.7

reset_timer
write t09.png
print_timer

